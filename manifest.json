    {
    "manifest_version": 3,
    "name": "Comparador de Precios por Keyword",
    "version": "1.0",
    "description": "Compara precios entre Falabella y MercadoLibre",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://www.falabella.com/*",
        "https://www.falabella.com.pe/*",
        "https://listado.mercadolibre.com.pe/*",
        "https://www.mercadolibre.com.pe/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
        "matches": [
            "https://www.falabella.com/*",
            "https://www.falabella.com.pe/*",
            "https://listado.mercadolibre.com.pe/*",
            "https://www.mercadolibre.com.pe/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
        }
    ]
    }